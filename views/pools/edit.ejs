<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a New Pool</title>
</head>
<body>
    <%- include('../partials/header') %>
    <h2>Edit Your Pool Review</h2>
    <form action="/pools/<%= pool._id %>?_method=PUT" method="POST">
        <label for="name">Pool Name:</label>
        <input type="text" name="name" id="name" value="<%= pool.name %>"/>
        <label for="event">Event:</label>
        <input type="text" name="event" id="event" value="<%= pool.event %>"/>
        <label for="date">Start Date:</label>
        <input type="date" name="date" id="date" value="<%= pool.date %>"/>
        <label for="location">Pool Location:</label>
        <input type="text" name="location" id="location" value="<%= pool.location %>"/>
        <label for="rating">Rating:</label>
        <select name="rating" id="rating" value="<%= pool.rating %>">
            
            <option value=""><%= pool.rating %></option>
            <option value="🏊🏼🏊🏼🏊🏼🏊🏼🏊🏼">🏊🏼🏊🏼🏊🏼🏊🏼🏊🏼</option>
            <option value="🏊🏼🏊🏼🏊🏼🏊🏼">🏊🏼🏊🏼🏊🏼🏊🏼</option>
            <option value="🏊🏼🏊🏼🏊🏼">🏊🏼🏊🏼🏊🏼</option>
            <option value="🏊🏼🏊🏼">🏊🏼🏊🏼</option>
            <option value="🏊🏼">🏊🏼</option>
        </select>
        <label for="review">Review:</label>
        <textarea name="review" id="review" rows="5" cols="40"><%= pool.review %></textarea> 
        <br> 
        <button type="submit">Update</button>
    
    </form>
    <%- include('../partials/footer.ejs') %>
</body>
</html>