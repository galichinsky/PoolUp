<%- include('../partials/header.ejs') %>

<h2>My Pools</h2>

<!-- <div> -->
  <% if (pools.length) { %>
  <ul>
    <% pools.forEach((pool) => { %>
      <li>
      <form
        action="/pools/<%= pool._id %>/?_method=DELETE"
        method="POST"
        class="delete-form">

      
      <p>Name: <%= pool.name %></p>
      <p>Location: <%= pool.location %></p>
      <p>Event: <%= pool.event %></p>
      <p>Event Date: <%= pool.date.toLocaleDateString() %></p>
      
        
      <a href="/pools/<%= pool._id %>/edit">Edit</a>
      
      <button type="submit">Delete</button>
    </form>
    </li>
    <% }); %>
  </ul>
  <% } else { %>
  <h3>No Pools Yet</h3>
  <% } %>
<!-- </div> -->
<%- include('../partials/footer.ejs') %>
