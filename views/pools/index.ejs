<%- include('../partials/header.ejs') %>

<h2>All Pools</h2>

<% if (pools.length) { %>
  <ul>
    <% pools.forEach((pool) => { %>
    <li>
      <p>Name: <%= pool.name %></p>
      <p>Location: <%= pool.location %></p>
      <p>Event: <%= pool.event %></p>
      <p>Event Date: <%= pool.date.toLocaleDateString() %></p>
      <% if (user._id.equals(pool.user)) { %>
       <p></p>
      <% } %>
    </li>
    <% }); %>
  </ul>
  <% } else { %>
  <h3>No Pools Yet</h3>
  <% } %> 
<%- include('../partials/footer.ejs') %>