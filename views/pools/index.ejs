<%- include('../partials/header.ejs') %>

<h2>All Pools</h2>

<% if (pools.length) { %>
  <ul>
    <% pools.forEach((pool) => { %>
    <li>
      <p><%= pool.name %></p>
      <p><%= pool.location %></p>
      <p><%= pool.event %></p>
      <% if (pool.date) { %>
        <p>Event Date: <%= pool.date.toLocaleDateString() %></p>
      <% } else { %>
        <p>Event Date: Not specified</p>
      <% } %>
      <% if (user._id.equals(pool.user)) { %>
       <p></p>
      <% } %>
    </li>
    <% }); %>
  </ul>
  <% } else { %>
  <h3>No Pools Yet</h3>
  <% } %> 
<%- include('../partials/footer.ejs') %>